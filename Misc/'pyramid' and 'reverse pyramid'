#pyramid
n=7
for row in range(n):
    for col in range(n-row-1):
        print(' ',end='')
    for col in range(row+1):
        print('*',end=' ')
    print()
print()



#reverse pyramid
n =7
for row in range(n,0,-1):
    for col in range(n-row):
        print(" ",end="")
    for col in range(row):
        if True:
            print("*",end=" ")
    print()
